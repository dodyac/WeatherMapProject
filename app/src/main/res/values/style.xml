<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.WeatherMapProject">
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="buttonStyle" parent="">
        <item name="cornerRadius">@dimen/card_corner_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/x30dp</item>
        <item name="android:paddingEnd">@dimen/x30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tilStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/cardBackground</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_small</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_marginBottom">@dimen/x10dp</item>
        <item name="materialThemeOverlay">@style/etStyle</item>
    </style>

    <style name="etStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="actStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/cardBackground</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_small</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_marginBottom">@dimen/x10dp</item>
        <item name="materialThemeOverlay">@style/acteStyle</item>
    </style>

    <style name="acteStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="cardViewStyle">
        <item name="rippleColor">?colorPrimary</item>
        <item name="cardCornerRadius">@dimen/card_corner_small</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="TabLayout_Theme" parent="@style/Theme.WeatherMapProject">
<!--        <item name="android:singleLine">true</item>-->
        <item name="textAllCaps">false</item>
    </style>
</resources>